import java.util.*;

public class Prog5 {
	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		int num, val=0;
		System.out.println("Enter a Number");
		num = in.nextInt();
		while (num > 0) {
			val = (val*10) + num%2;
			num = (int) num / 2;
		}
		System.out.println(val);
	}
}
